<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>

      <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, width: 800, height: 500, crop: :fill %>
      <% end %>

        <% @cocktail.doses.each do |dose| %>
          <p>
          <%= dose.description %> --
          <%= dose.ingredient.name %>
          </p>
          <%= link_to 'Remove', cocktail_dose_path(@cocktail, dose), method: :delete %>
        <% end %>

        <%= link_to 'Add Doses!', new_cocktail_dose_path(@cocktail), class: 'btn' %>
        <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>
